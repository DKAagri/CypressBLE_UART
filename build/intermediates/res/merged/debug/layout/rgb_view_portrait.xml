<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#cecece"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/intensityLayout"
            android:layout_weight="0.96">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/intencitychanger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="8"
                    android:max="10"
                    android:maxHeight="3dp"
                    android:minHeight="3dp"
                    android:progress="4"
                    android:progressDrawable="@drawable/custom_seekbar"
                    android:thumb="@drawable/brightness_icon"
                    android:mirrorForRtl="true" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="31dp"
                android:text="Frequency"
                android:id="@+id/textView11" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editfrequency"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="31dp"
                android:text="Intensity"
                android:id="@+id/textView13" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editIntensity"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="31dp"
                android:text="Duty Cycle"
                android:id="@+id/textView9" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editDutyCycle"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="31dp"
                android:text="Red"
                android:id="@+id/textView8" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editRed"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="31dp"
                android:text="Green"
                android:id="@+id/textView10" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editGreen"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="31dp"
                android:text="Blue"
                android:id="@+id/textView4" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editBlue"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="31dp"
                android:text="Phase"
                android:id="@+id/textView3" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editPhase"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/btnTxDataSend" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/actionbar_bg_color_light"
            android:gravity="center_vertical"
            android:id="@+id/intensitycolorChangeLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="204dp"
                android:layout_height="wrap_content">

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:id="@+id/dreamWeaverLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Pause"
                android:id="@+id/buttonPauseSong"
                android:focusable="true"
                android:background="@color/medium_blue"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/buttonStopSong"
                android:layout_toStartOf="@+id/buttonStopSong" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="play"
                android:id="@+id/buttonPlayAudio"
                android:background="@color/file_read_progress"
                android:textColor="#ffffff"
                android:layout_above="@+id/timeStamp"
                android:layout_toStartOf="@+id/buttonPauseSong" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Stop"
                android:id="@+id/buttonStopSong"
                android:background="@android:color/holo_red_light"
                android:textColor="#ffffff"
                android:layout_above="@+id/timeStamp"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Trip to the Forest"
                android:id="@+id/titleText"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SongSeekBar"
                android:progressDrawable="@android:color/darker_gray"
                android:indeterminate="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="time stamp"
                android:id="@+id/timeStamp"
                android:layout_above="@+id/SongSeekBar"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/txtcolorindicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:contentDescription="@string/app_name"
                android:minHeight="30dp"
                android:minWidth="40dp"
                android:padding="1dp"
                android:scaleType="matrix"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="@string/rgb_current_color"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:id="@+id/textView10"
                android:layout_alignTop="@+id/txtcolorindicator"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>